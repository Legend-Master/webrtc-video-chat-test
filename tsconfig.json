{
	"compilerOptions": {
		// Basically from Matt Pocock's https://www.totaltypescript.com/tsconfig-cheat-sheet

		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,

		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,

		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"types": [
			"dom-view-transitions",
		],
	},
}