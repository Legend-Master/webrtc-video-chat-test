{
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            // "pauseForSourceMap": false,
            "preLaunchTask": "parcel",
            "pathMapping": {
                "__parcel_source_root": "${webRoot}"
            },
            "runtimeArgs": [
                // GPU/Chromium bug: https://https://crbug.com/1366924
                "--disable_direct_composition=1"
            ]
        },
    ],
}