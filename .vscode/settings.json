{
    "files.associations": {
        ".parcelrc": "jsonc",
        "firebase.json": "jsonc",
    },
    "json.schemas": [
        {
            "fileMatch": [
                ".parcelrc",
            ],
            "schema": {
                "allowTrailingCommas": true,
            }
        },
        {
            "fileMatch": [
                "firebase.json"
            ],
            "schema": {
                "$ref": "https://github.com/firebase/firebase-tools/raw/master/schema/firebase-config.json",
            }
        }
    ],
    "css.lint.unknownAtRules": "ignore",
    "css.lint.validProperties": [
        "transition-behavior",
    ]
}